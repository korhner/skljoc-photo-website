---
import '../../styles/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const {
  title,
  description = "Profesionalni fotograf za dečije rođendane i portrete u Beogradu. Dragana Korhner nudi autentične i prirodne fotografije vaših najdragocenijih trenutaka.",
  keywords = "fotograf Beograd, dečiji rođendani, fotografisanje rođendana, portreti Beograd, porodični fotograf, profesionalni fotograf",
  ogImage = "/images/photos/me.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="sr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Dragana Korhner Photography</title>
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:type" content="website">
  <meta property="og:locale" content="sr_RS">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <!-- Sitemap -->
  <link rel="sitemap" href="/sitemap-index.xml">

  <!-- Amplitude Analytics -->
  <script type="text/javascript">
    // Simple direct approach without complex initialization
    try {
      (function(e,t){var r=e.amplitude||{};
      var n=function(){this._q=[];return this};
      function i(e){r[e]=function(){r._q.push([e].concat(Array.prototype.slice.call(arguments,0)));}}
      var s=["init","logEvent","setUserId","setUserProperties","setOptOut"];
      for(var o=0;o<s.length;o++){i(s[o]);}
      e.amplitude=r;
      var a=t.createElement("script");
      a.type="text/javascript";
      a.async=true;
      a.src="https://cdn.amplitude.com/libs/amplitude-8.21.4-min.js";
      a.onload=function(){
        console.log("Amplitude script loaded successfully");
        try {
          if (window.amplitude && typeof window.amplitude.init === 'function') {
            window.amplitude.init("b61d46f5894d41eaed2f6bb7f472fc78", null, {
              includeReferrer: true,
              includeUtm: true,
              trackingOptions: {
                ip_address: true
              },
              defaultTracking: {
                sessions: true,
                pageViews: true,
                formInteractions: true,
                fileDownloads: true
              }
            });
            window.amplitude.logEvent("Page View", {
              page_title: document.title,
              page_url: window.location.href,
              page_path: window.location.pathname
            });
            console.log("Amplitude tracking initialized successfully");
          } else {
            console.error("Amplitude initialization failed: amplitude object or init method not found");
          }
        } catch (initError) {
          console.error("Error during Amplitude initialization:", initError);
        }
      };
      a.onerror=function(err){
        console.error("Failed to load Amplitude script:", err);
      };
      var u=t.getElementsByTagName("script")[0];
      u.parentNode.insertBefore(a,u);
    })(window,document);
    console.log("Amplitude snippet included");
    } catch (e) {
      console.error("Error in Amplitude setup:", e);
    }
  </script>
</head>
<body class="text-text-dark bg-white">
  <Header />
  <main>
    <slot />
  </main>
  <Footer />

  <!-- Mobile Menu Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.querySelector('.menu-toggle');
      const navLinks = document.querySelector('.nav-links');

      if (menuToggle && navLinks) {
        menuToggle.addEventListener('click', () => {
          navLinks.classList.toggle('active');
          menuToggle.classList.toggle('active');
        });
      }
    });
  </script>
</body>
</html>