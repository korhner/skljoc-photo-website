---
import Logo from '@components/ui/Logo.astro';

const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/', label: 'Početna' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/about', label: 'O meni' },
  { href: '/contact', label: 'Kontakt' }
];
---

<footer class="bg-primary py-12 mt-16">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Logo Section -->
      <div>
        <div class="mb-4">
          <Logo />
        </div>
        <p class="text-text-light text-sm">
          Profesionalni fotograf za dečije rođendane i portrete u Beogradu
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-medium text-text-dark mb-4">Brzi linkovi</h4>
        <ul class="space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-text-light hover:text-secondary text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h4 class="font-medium text-text-dark mb-4">Pratite me</h4>
        <div class="flex gap-4">
          <a
            href="https://www.instagram.com/skljoc.foto"
            aria-label="Instagram"
            class="text-text-light hover:text-secondary text-xl transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-instagram"></i>
          </a>
          <a
            href="#"
            aria-label="Facebook"
            class="text-text-light hover:text-secondary text-xl transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-facebook"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-secondary/20 pt-6">
      <p class="text-center text-text-light text-sm">
        &copy; {currentYear} Dragana Korhner Photography. Sva prava zadržana.
      </p>
    </div>
  </div>
</footer>